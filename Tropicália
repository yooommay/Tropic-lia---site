<script>
    function increaseFont() {
        document.body.style.fontSize = (parseInt(getComputedStyle(document.body).fontSize) + 2) + 'px';
    }

    function decreaseFont() {
        document.body.style.fontSize = (parseInt(getComputedStyle(document.body).fontSize) - 2) + 'px';
    }

    function toggleContrast() {
        if(document.body.style.background.includes('linear-gradient')) {
            document.body.style.background = '#000';
            document.body.style.color = '#fff';
        } else {
            document.body.style.background = 'linear-gradient(120deg, #FFD700, #FF6347, #40E0D0)';
            document.body.style.color = '#000';
        }
    }

    function playAudio(id) {
        const audio = document.getElementById(id);
        audio.play();
    }
</script>
